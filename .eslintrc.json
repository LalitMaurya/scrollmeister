{
	"parser": "babel-eslint",
	"plugins": ["flowtype"],
	"extends": ["plugin:flowtype/recommended", "eslint:recommended"],
	"env": {
		"browser": true,
		"jest": true
	},
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module"
	},
	"globals": {
		"process": true
	},
	"rules": {
		"radix": ["warn", "always"],
		"no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
		"eqeqeq": ["error", "always", { "null": "ignore" }]
	}
}
