{
  "name": "scrollmeister",
  "version": "0.0.1",
  "description": "Open-source JavaScript framework to declaratively build scrolling experiences",
  "main": "./src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "watchify ./src/index.js -o ./dist/scrollmeister.js -v",
    "build": "browserify ./src/index.js -p tinyify > ./dist/scrollmeister.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Prinzhorn/scrollmeister.git"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "env"
          ]
        }
      ]
    ]
  },
  "keywords": [
    "scrolling",
    "scroll",
    "parallax",
    "animation",
    "web",
    "components",
    "custom",
    "elements",
    "element",
    "storytelling"
  ],
  "author": {
    "name": "Alexander Prinzhorn",
    "email": "alexander@prinzhorn.it",
    "url": "https://www.prinzhorn.it"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Prinzhorn/scrollmeister/issues"
  },
  "homepage": "https://www.scrollmeister.com",
  "dependencies": {
    "document-register-element": "^1.7.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "tinyify": "^2.4.0",
    "watchify": "^3.10.0"
  }
}
