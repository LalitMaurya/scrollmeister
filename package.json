{
  "name": "scrollmeister",
  "version": "0.0.1",
  "description": "Open-source JavaScript framework to declaratively build scrolling experiences",
  "main": "./src/index.js",
  "scripts": {
    "test": "npm run flow && npm run jest",
    "jest": "NODE_PATH='./src' jest",
    "flow": "flow check",
    "watch": "NODE_PATH='./src' watchify ./src/index.js -o ./dist/scrollmeister.js -v",
    "build": "NODE_PATH='./src' browserify ./src/index.js -p tinyify > ./dist/scrollmeister.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Prinzhorn/scrollmeister.git"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-css"
    ]
  },
  "babel": {
    "presets": [
      "env",
      "flow"
    ]
  },
  "browserify-css": {
    "autoInject": true,
    "autoInjectOptions": {
      "verbose": false
    },
    "minify": true
  },
  "keywords": [
    "scrolling",
    "scroll",
    "parallax",
    "animation",
    "web",
    "components",
    "custom",
    "elements",
    "element",
    "storytelling"
  ],
  "author": {
    "name": "Alexander Prinzhorn",
    "email": "alexander@prinzhorn.it",
    "url": "https://www.prinzhorn.it"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Prinzhorn/scrollmeister/issues"
  },
  "homepage": "https://www.scrollmeister.com",
  "dependencies": {
    "document-register-element": "^1.7.2",
    "raf": "^3.4.0",
    "resize-observer-polyfill": "^1.5.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babelify": "^8.0.0",
    "browserify-css": "^0.14.0",
    "flow-bin": "^0.65.0",
    "jest": "^22.1.4",
    "tinyify": "^2.4.0",
    "watchify": "^3.10.0"
  }
}
